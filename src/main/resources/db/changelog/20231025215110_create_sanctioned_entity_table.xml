<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <property name="now" value="current_timestamp" dbms="postgresql"/>
    
    <changeSet id="Create sanctioned person table" author="Edgar Selihov">
        <createTable tableName="sanctioned_person">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="name_6" type="TINYTEXT">
                <constraints nullable="false"/>
            </column>
            <column name="name_1" type="TINYTEXT"/>
            <column name="name_2" type="TINYTEXT"/>
            <column name="name_3" type="TINYTEXT"/>
            <column name="name_4" type="TINYTEXT"/>
            <column name="name_5" type="TINYTEXT"/>
            <column name="title" type="TINYTEXT"/>
            <column name="name_non_latin_script" type="TINYTEXT"/>
            <column name="non_latin_script_type" type="TINYTEXT"/>
            <column name="non_latin_script_language" type="TINYTEXT"/>
            <column name="dob" type="TINYTEXT"/>
            <column name="town_of_birth" type="TINYTEXT"/>
            <column name="country_of_birth" type="TINYTEXT"/>
            <column name="nationality" type="TINYTEXT"/>
            <column name="passport_number" type="TINYTEXT"/>
            <column name="passport_details" type="TINYTEXT"/>
            <column name="national_identification_number" type="TINYTEXT"/>
            <column name="national_identification_details" type="TINYTEXT"/>
            <column name="position" type="TINYTEXT"/>
            <column name="address_1" type="TEXT"/>
            <column name="address_2" type="TEXT"/>
            <column name="address_3" type="TEXT"/>
            <column name="address_4" type="TEXT"/>
            <column name="address_5" type="TEXT"/>
            <column name="address_6" type="TEXT"/>
            <column name="post_zip_code" type="TINYTEXT"/>
            <column name="country" type="TINYTEXT"/>
            <column name="other_information" type="TEXT"/>
            <column name="group_type" type="TINYTEXT"/>
            <column name="alias_type" type="TINYTEXT"/>
            <column name="alias_quality" type="TINYTEXT"/>
            <column name="regime" type="TINYTEXT"/>
            <column name="listed_on" type="TINYTEXT"/>
            <column name="uk_sanctions_list_date_designated" type="TINYTEXT"/>
            <column name="last_updated" type="TINYTEXT"/>
            <column name="group_id" type="INT"/>
            <column name="create_dtime" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="${now}"/>
            <column name="update_dtime" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="${now}"/>
        </createTable>
    </changeSet>

    <changeSet id="Create sanctioned_person name column indices" author="Edgar Selihov">
        <createIndex tableName="sanctioned_person" indexName="name_1_idx">
            <column name="name_1"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_2_idx">
            <column name="name_2"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_3_idx">
            <column name="name_3"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_4_idx">
            <column name="name_4"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_5_idx">
            <column name="name_5"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_6_idx">
            <column name="name_6"/>
        </createIndex>
        <createIndex tableName="sanctioned_person" indexName="name_non_latin_script_idx">
            <column name="name_non_latin_script"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>